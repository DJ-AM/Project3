<!DOCTYPE html>
<html>
  <head>
    <%- include ./partials/head %>
  </head>
  <body>
    <link href="https://fonts.googleapis.com/css?family=Pacifico" rel="stylesheet">

    <%- include ./partials/nav %>
    <div class="container-fluid backgrnd">
      <canvas id="FrontTitle" width=630></canvas>
      <div class="h4 text-contrast space-4">
        <h4 class="cover-heading text-center">Avoid driving into a storm</h4>
      </div>
      <div class="text-center alert alert-info center-block" id="search-box">
        <form class="form-inline" action="/" method="post">
          <div class="form-group">
            <label>Starting Location:</label>
            <input type="text" name="startingLoc" placeholder="Current location" class="form-control">
          </div>
          <div class="form-group">
            <label>Destination:</label>
            <input type="text" name="destination" placeholder="Enter destination" class="form-control">
          </div>
          <button type="submit" class="btn btn-primary">Submit</button>
        </form>
      </div>
    </div>

    <%- include ./partials/scripts %>
    <script src="/javascript/animate.js"></script>

  </body>
</html>
